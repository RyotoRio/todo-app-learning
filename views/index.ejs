<%- include('partial/header.ejs') %>
    <div class="todo-container">
        <h2 class="todo-title">Todo list</h2>
        <div>
            <a href="addTodo" class="btn">Add Todo</a>
        </div>
        <br>

        <table>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Created at</th>
                <th>Updated at</th>
                <th>Action</th>
            </tr>
            <% for(let i=0; i< todos.length; i++){ %>
            <tr>
                <td><%= todos[i].title %></td>
                <td><%= todos[i].descript %></td>
                <td><%= moment(todos[i].createdAt).format("MMM DD, YYYY, HH:mm:ss") %></td>
                <td><%= moment(todos[i].updateAt).format("MMM DD, YYYY, HH:mm:ss") %></td>
                <td>
                    <a href="/updateTodo?id=<%= todos[i]._id %>" class="btn">Edit</a>
                    <a href="/deleteTodo?id=<%= todos[i]._id %>" class="btn">Delete</a>
                </td>
            </tr>
            <% } %>
        </table>
    </div>
    <%- include('partial/footer.ejs') %>